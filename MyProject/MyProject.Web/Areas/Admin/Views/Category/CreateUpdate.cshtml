@model MyProject.Models.ViewModels.CategoryVM

<form method="post" asp-area="Admin" asp-action="CreateUpdate" asp-controller="Category">
    <input type="hidden" asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div row pb-3>
            <h4 >@((Model.Category == null || Model.Category.Id == 0)?"Create":"Update") Category</h4>
            <hr/>
        </div>
         <div row mb-3>
            <label asp-for="Category.Name"> </label>
            <input asp-for="Category.Name" type="text" class="form-control" />
        </div>
        <div row mb-3>
            <label asp-for="Category.DisplayOrder"> </label>
            <input asp-for="Category.DisplayOrder" type="number" class="form-control" />
        </div>
        <button class="btn btn-primary" style="margin:20px" type="submit"> @((Model.Category == null || Model.Category.Id == 0) ? "Create" : "Update") </button>
    </div>
</form>
