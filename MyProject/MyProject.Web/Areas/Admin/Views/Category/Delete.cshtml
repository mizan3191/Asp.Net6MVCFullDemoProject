@model Category

<form method="post" asp-action="Delete" asp-area="Admin" asp-controller="Category">
    <div class="border p-3 mt-4">
        <div row pb-3>
            <h4>Delete Category Item </h4>
            <hr/>
        </div>
         <div row mb-3>
            <label asp-for="Name"> </label>
            <input asp-for="Name" type="text" class="form-control" disabled />
        </div>
        <div row mb-3>
            <label asp-for="DisplayOrder"> </label>
            <input asp-for="DisplayOrder" type="number" class="form-control" disabled />
        </div>
        <button class="btn btn-danger" style="margin:20px" type="submit"> Delete </button>
    </div>

</form>
