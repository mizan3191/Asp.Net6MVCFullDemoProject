@model MyProject.Domain.ViewModels.ProductVM

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary ">Product</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-action="CreateUpdate" asp-controller="Product"> <i class="bi bi-plus-circle"></i>&nbsp; Create New Product</a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/Product.js"></script>

                }