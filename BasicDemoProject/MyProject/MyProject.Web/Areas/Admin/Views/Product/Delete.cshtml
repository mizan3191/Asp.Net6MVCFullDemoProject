@model Product

<form method="post" asp-action="Delete" asp-area="Admin" asp-controller="Product">
    <input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4">
        <div row pb-3>
            <h4>Delete Product </h4>
            <hr/>
        </div>
         <div row mb-3>
            <label asp-for="Name"> </label>
            <input asp-for="Name" type="text" class="form-control" disabled />
        </div>
        <div row mb-3>
            <label asp-for="Description"> </label>
            <input asp-for="Description" type="number" class="form-control" disabled />
        </div>
        <div row mb-3>
            <label asp-for="Price"> </label>
            <input asp-for="Price" type="number" class="form-control" disabled />
        </div>
        <div row mb-3>
            <label asp-for="CategoryId"> </label>
            <input asp-for="CategoryId" type="number" class="form-control" disabled />
        </div>
        <button class="btn btn-danger" style="margin:20px" type="submit"> Delete </button>
    </div>

</form>
