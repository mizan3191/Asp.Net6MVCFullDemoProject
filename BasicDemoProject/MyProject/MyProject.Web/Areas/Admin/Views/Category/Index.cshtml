@model MyProject.Domain.ViewModels.CategoryVM

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary ">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-action="CreateUpdate" asp-controller="Category"> <i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Category Order
            </th>
            <th>
                Created Date
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td>
                    @item.CreateDate
                </td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id"> <i class="bi bi-trash"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>